# Backend Local Development Environment Variables
# Copy to .env and fill in actual values

# Node Environment
NODE_ENV=development
PORT=3002

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/inchronicle_dev

# JWT Configuration
JWT_SECRET=your-local-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-local-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS & Frontend
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# File Upload
UPLOAD_DIR=./uploads
UPLOAD_VOLUME_PATH=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@inchronicle.com

# Azure OpenAI (Optional - for AI features)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Internal API Key (Optional - for service-to-service auth)
INTERNAL_API_KEY=your-internal-api-key

# Emergency Mode (Disable AI features)
EMERGENCY_ENABLE=false
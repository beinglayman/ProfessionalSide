# Azure Infrastructure Provisioning Configuration
# Copy to .env and fill in actual values

# Azure Subscription & Region
AZ_SUBSCRIPTION=your-subscription-id-here
AZ_RG=ps-prod-rg
AZ_REGION=eastus

# Container Registry
ACR_NAME=yourregistryname

# PostgreSQL Flexible Server
PG_NAME=ps-postgres-server
PG_USER=psadmin
PG_PASS=your-secure-password-here
PG_DB=inchronicle

# Storage Account (for file uploads)
STORAGE_NAME=psstorage1758551070
STORAGE_SHARE=uploads

# App Service Plan
PLAN_NAME=ps-app-plan

# Web Apps
BACKEND_APPNAME=ps-backend-1758551070
FRONTEND_APPNAME=ps-frontend-1758551070
FRONTEND_URL=https://ps-frontend-1758551070.azurewebsites.net
